<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.admin.AdminFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/devicesFilterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/row_item_margin_horizontal"
            android:paddingVertical="@dimen/row_item_margin_vertical"
            app:layout_constraintBottom_toTopOf="@id/getDescriptorClusterButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/device_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/row_item_margin_horizontal"
                android:text="4"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="@dimen/task_size" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/endpoint_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/row_item_margin_horizontal"
                android:text="0"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="@dimen/task_size" />
        </LinearLayout>

        <Button
            android:id="@+id/dumpRepositoriesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dump Repositories"
            app:layout_constraintBottom_toTopOf="@+id/getDescriptorClusterButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/getDescriptorClusterButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Get Descriptor Cluster"
            app:layout_constraintBottom_toTopOf="@+id/addDeviceButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/addDeviceButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add Device"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

