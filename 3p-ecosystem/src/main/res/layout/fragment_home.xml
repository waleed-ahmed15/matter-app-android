<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.home.HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/topBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="EZ SWITCH"
                app:menu="@menu/top_app_bar"
                app:navigationContentDescription="@string/go_to_home"
                app:navigationIcon="@drawable/ic_baseline_home_24"/>

        </com.google.android.material.appbar.AppBarLayout>

<!--        <androidx.appcompat.widget.Toolbar-->
<!--            android:id="@+id/toolbar"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="?attr/colorPrimary"-->
<!--            android:minHeight="?attr/actionBarSize"-->
<!--            android:theme="?attr/actionBarTheme"-->
<!--            tools:layout_editor_absoluteX="0dp"-->
<!--            tools:layout_editor_absoluteY="0dp" />-->

        <LinearLayout
            android:id="@+id/noDevicesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="@dimen/row_item_margin_horizontal"
            android:paddingVertical="@dimen/row_item_margin_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/noDevicesImageView"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:contentDescription="@string/no_devices_image"
            android:scaleType="centerInside"
            android:src="@drawable/emptystate_missing_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/noDevicesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_devices_yet"
            android:textColor="?attr/colorAccent"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textSize="@dimen/no_device_title" />

            <TextView
                android:id="@+id/addYourFirstTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/add_your_first"
                android:textColor="?attr/colorAccent"
                android:textAppearance="?attr/textAppearanceBodyMedium"

            android:textSize="@dimen/no_device_text" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/devicesListRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingVertical="@dimen/row_item_margin_vertical"
            android:scrollbars="vertical"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topBarLayout"
            />
<!--            app:layout_constraintLeft_toLeftOf="parent"-->
<!--            app:layout_constraintRight_toRightOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            />-->
<!--        app:layout_constraintBottom_toTopOf="@id/devicesFilterLayout"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/topBarLayout"-->



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addDeviceButton"
            android:contentDescription="@string/add_device_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ic_baseline_add_24"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="?attr/floatingActionButtonLargeStyle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

